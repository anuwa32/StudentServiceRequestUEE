<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:text="&#8942;"
        android:textSize="20sp"
        android:id="@+id/txt_option"
        android:layout_gravity="right"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/school"
        android:backgroundTint="@color/material_on_background_disabled"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:src="@drawable/alpha"/>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_school"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_grade"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_noStd"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_essentials"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_phone"/>

        </LinearLayout>



